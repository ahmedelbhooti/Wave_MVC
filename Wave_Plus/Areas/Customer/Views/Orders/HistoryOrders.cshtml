@model IEnumerable<OrderHeader>

<link rel="stylesheet" href="~/css/Order.css" />


<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    if (item.OrderStatus == SD.StatusCompleted)
                    {
                        <div class="card card-sm mb-4" style="border-radius: 10px;">
                            <div class="card-header bg-secondary text-white" style="border-radius: 10px;">
                                <h5 class="mb-0">Thanks for your Order, <span style="color: #a8729a;">@item.Name</span>!</h5>
                            </div>
                            <div class="card-body">

                                <h5 class="fw-bold mb-0">Order Details</h5>
                                <div class="d-flex justify-content-between">
                                    <p class="text-muted mb-0">Email : @item.Email</p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <p class="text-muted mb-0">Phone Number : @item.PhoneNumber</p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <p class="text-muted mb-0">Order Status : @item.OrderStatus</p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <p class="text-muted mb-0">Payment Status : @item.PaymentStatus</p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <p class="text-muted mb-0">Order Date : @item.OrderDate</p>
                                    <h6 class="">MwSt.-Anteil: CHF @((item.OrderTotal * 0.08100).ToString("0.00"))</h6>
                                </div>
                            </div>
                            <div class="card-footer bg-primary" style=" border-radius: 10px;">

                                <h5 class="text-white text-uppercase mb-0">
                                    Total :  CHF @item.OrderTotal
                                </h5>
                                <a asp-controller="Orders" asp-action="Details" asp-route-orderId="@item.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-info-circle"></i> More Details
                                </a>
                            </div>
                        </div>
                    }

                }
            </div>
        </div>
    </div>
</section>




