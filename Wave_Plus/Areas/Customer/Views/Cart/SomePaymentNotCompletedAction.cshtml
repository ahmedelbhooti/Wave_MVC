@{
    ViewData["Title"] = "Payment Not Completed";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Payment Not Completed</h1>
                    <p class="card-text">We're sorry, but your payment was not completed.</p>
                    <p class="card-text">Please try again or contact customer support for assistance.</p>
                    <a asp-action="Index" asp-controller="Cart" class="btn btn-primary">Go Back to Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>
